{
    "extends": "../../../.eslintrc.json",
    "ignorePatterns": ["!**/*"],
    "rules": {
        "no-restricted-imports": [
            "error",
            {
                "paths": [
                    {
                        "name": "@ppwcode/ng-common",
                        "message": "Use a relative import instead. Importing from @ppwcode/ng-common is not allowed inside this lib directory."
                    }
                ]
            }
        ]
    },
    "overrides": [
        {
            "files": ["*.ts"],
            "rules": {
                "@angular-eslint/directive-selector": [
                    "error",
                    {
                        "type": "attribute",
                        "prefix": "ppw",
                        "style": "camelCase"
                    }
                ],
                "@angular-eslint/component-selector": [
                    "error",
                    {
                        "type": "element",
                        "prefix": "ppw",
                        "style": "kebab-case"
                    }
                ]
            }
        },
        {
            "files": ["*.html"],
            "rules": {}
        }
    ]
}
