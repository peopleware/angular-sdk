{
  "name": "@ppwcode/ng-sdk",
  "version": "21.2.0",
  "repository": {
    "url": "https://github.com/peopleware/angular-sdk"
  },
  "schematics": "./schematics/collection.json",
  "scripts": {
    "build": "tsc -p tsconfig.schematics.json",
    "postbuild": "copyfiles schematics/*/schema.json schematics/*/files/** schematics/collection.json ../../../dist/ppwcode/ng-sdk"
  },
  "peerDependencies": {
    "@angular/common": "^21.0.0",
    "@angular/core": "^21.0.0"
  },
  "devDependencies": {
    "copyfiles": "file:../../../node_modules/copyfiles",
    "typescript": "file:../../../node_modules/typescript"
  },
  "dependencies": {
    "tslib": "^2.3.0"
  },
  "sideEffects": false,
  "ng-add": {
    "save": "devDependencies"
  }
}
